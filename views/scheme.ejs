<% layout('/layouts/boilerplate') -%>

<body>

    <div class="header">
        <h1>Ministry Major Schemes</h1>
    </div>

    <div class="container">
        <div class="row">
            <!-- Scheme 1 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">Agriculture Infrastructure Fund</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            Provides financial support for the development of agricultural infrastructure such as cold storage and warehousing facilities.
                            <p><a href="https://agriwelfare.gov.in/Documents/AIF_Guidelines_English_12Jun24.pdf" download>Download (341 KB) pdf</a></p>
                            <a href="https://agriinfra.dac.gov.in/" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 2 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">PM-Kisan Samman Nidhi</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            Direct income support scheme for farmers, providing financial assistance of Rs. 6000 per year in three equal installments.
                            <p><a href="https://pmkisan.gov.in/" target="_blank">Download</a></p>
                            <a href="https://pmkisan.gov.in/" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 3 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">ATMA</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            (Agricultural Technology Management Agency): Aims to empower farmers through innovative agricultural technologies and improved extension services.
                            <p><a href="https://agriwelfare.gov.in/Documents/ATMA-Guidelines%202018.pdf" download>Download (1.17 MB) pdf</a></p>
                            <a href="https://extensionreforms.da.gov.in/DashBoard_Statusatma.aspx" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 4 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">AGMARKNET</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            Facilitates online trading of agricultural commodities to ensure fair prices and quality standards across markets in India.
                            <p><a href="https://agriwelfare.gov.in/Documents/Agmarknet_Guidelines.pdf" download>Download (1.03 MB) pdf</a></p>
                            <a href="https://agmarknet.gov.in/PriceAndArrivals/arrivals1.aspx" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 5 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">Horticulture</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            Promotes growth in the horticulture sector through schemes focusing on production, post-harvest management, and market linkages.
                            <p><a href="https://agriwelfare.gov.in/Documents/midh_Guidelines.pdf" download>Download (691.68 KB) pdf</a></p>
                            <a href="https://midh.gov.in/nhmapplication/feedback/midhKPI.aspx" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 6 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">Online Pesticide Registration</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            Streamlines the process of registering pesticides to ensure safety and efficacy in agricultural practices.
                            <p><a href="https://agriwelfare.gov.in/Documents/Pesticides_Registration.pdf" download>Download (1.25 MB) pdf</a></p>
                            <a href="https://agriwelfare.gov.in/Documents/Pesticides_Registration.pdf" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 7 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">Plant Quarantine Clearance</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            Ensures the safe import and export of agricultural commodities by preventing the introduction and spread of pests and diseases.
                            <p><a href="https://agriwelfare.gov.in/Documents/Plant_Quarantine_Clearance.pdf" download>Download (1.25 MB) pdf</a></p>
                            <a href="https://pqms.cgg.gov.in/pqms-angular/home" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 8 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">DBT in Agriculture</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            Implements Direct Benefit Transfer to ensure timely payment of subsidies and benefits directly into farmers' bank accounts.
                            <p><a href="https://agriwelfare.gov.in/Documents/Guideline_DBTinAgriculture.pdf" download>Download</a></p>
                            <a href="https://www.dbtdacfw.gov.in/" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 8 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">Pradhanmantri Krishi Sinchayee Yojana</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            Aims to improve water use efficiency through various irrigation methods to ensure "Per Drop More Crop".
                            <p><a href="https://agriwelfare.gov.in/Documents/Guidelines_PMKSY.pdf" download>Download</a></p>
                            <a href="https://pmksy.gov.in/mis/frmDashboard.aspx" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 8 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">Kisan Call Center</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            Provides a toll-free number for farmers to seek expert advice on agricultural practices, crop diseases, and market information.
                            <p><a href="https://mkisan.gov.in/Home/KCCDashboard" download>Download</a></p>
                            <a href="https://mkisan.gov.in/Home/KCCDashboard" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 8 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">	mKisan</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            Delivers personalized information and advisories to farmers via SMS on their mobile phones to improve farming practices and productivity.
                            <p><a href="https://mkisan.gov.in/" download>Download</a></p>
                            <a href="https://mkisan.gov.in/" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 8 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">	Jaivik Kheti</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            (Organic Farming): Promotes chemical-free farming practices and certification of organic produce to enhance sustainability and farmer incomes.
                            <p><a href="https://agriwelfare.gov.in/Documents/Jaivik_Kheti_Guidelines.pdf" download>Download</a></p>
                            <a href="https://pgsindia-ncof.gov.in/home.aspx" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 8 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">	e-Nam</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            (National Agriculture Market): Integrates markets for agricultural commodities by creating a unified national market through an online trading portal.
                            <p><a href="https://agriwelfare.gov.in/Documents/Enamguidelines.pdf" download>Download</a></p>
                            <a href="https://enam.gov.in/web/" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 8 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">Soil Health Card</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            Provides information on soil health to farmers, enabling them to make informed decisions on nutrient management and crop selection.
                            <p><a href="https://agriwelfare.gov.in/Documents/Guidelines_Soil%20Health%20Card.pdf" download>Download</a></p>
                            <a href="https://soilhealth.dac.gov.in/home" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheme 8 -->
            <div class="col-md-12">
                <div class="scheme-card">
                    <div class="card-body">
                        <h5 class="card-title">Pradhan Mantri Fasal Bima Yojana</h5>
                        <span class="read-more" onclick="toggleInfo(this)">Read more</span>
                        <div class="card-text">
                            Offers crop insurance to protect farmers from crop losses due to natural calamities, pests, and diseases.
                            <p><a href="https://agriwelfare.gov.in/Documents/PMFBY_Guidelines.pdf" download>Download</a></p>
                            <a href="https://pmfby.gov.in/ext/rpt/ssfr_17" class="btn btn-apply">Apply here</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <script>
        function toggleInfo(element) {
            const cardText = element.nextElementSibling;
            if (cardText.style.display === "none" || cardText.style.display === "") {
                cardText.style.display = "block";
                element.textContent = "Read less";
            } else {
                cardText.style.display = "none";
                element.textContent = "Read more";
            }
        }
    </script>
</body>

